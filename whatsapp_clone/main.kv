<Tab>:
    MDLabel:
        id: label
        text: "Tab 0"
        halign: "center"

<TabWithIcon>
    MDIconButton:
        id: icon
        icon: root.icon
        user_font_size: "20sp"
        pos_hint: {"center_x": .5, "center_y": .5}

BoxLayout:
    orientation: 'vertical'
    MDToolbar:
        title: 'WhatsApp'
        right_action_items: [ ['magnify', lambda x: print("magnify")], ['message-reply-text', lambda x: print('chat')], ['dots-vertical', lambda x: print('dots-vertical')] ]
    MDTabs:
        id: android_tabs
        on_tab_switch: app.on_tab_switch(*args)
        TabWithIcon:
            icon: 'camera'
        Tab:
            text: 'Calls'
        Tab:
            text: 'Chats'
            ScrollView:
                MDList:
                    id: list
        Tab:
            text: 'Contacts'
